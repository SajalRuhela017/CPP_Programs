{
	"Binary Exponentiation": {
		"scope": "cpp",
		"prefix": "binexpo",
		"body": [
            "// calculates a raise to the power b",
			"long long binaryExponentiation(long long a, long long b)",
			"{",
			"    long long ans = 1;",
			"    while(b > 0)",
			"    {",
			"        if(b & 1)",
			"            ans = ans * a;",
			"        a = a * a;",
			"        b >>= 1;",
			"    }",
            "    return ans;",
			"}"
		],
		"description": "Binary Exponentiation"
	}
}